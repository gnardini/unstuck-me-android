<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_top"
             android:layout_width="match_parent"
             android:layout_height="48dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/support_elevation_90"/>

    <ar.com.wolox.unstuckme.view.NonSwipeableViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/support_elevation_270"/>

    <include layout="@layout/toolbar_bottom"
             android:layout_width="match_parent"
             android:layout_height="48dp"/>

</LinearLayout>